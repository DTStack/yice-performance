{
    "name": "yice-performance",
    "version": "1.0.0",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "dev": "NODE_ENV=development nest start --watch",
        "build": "NODE_ENV=production nest build",
        "build:test": "NODE_ENV=staging nest build",
        "start": "NODE_ENV=production nest start",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "prettier": "npx prettier \"**/*.ts\" \"**/*.js\" \"**/*.json\" --check",
        "prettier:fix": "npx prettier \"**/*.ts\" \"**/*.js\" \"**/*.json\" --write",
        "eslint": "npx eslint \"{src,apps,libs,test}/**/*.ts\"",
        "eslint:fix": "npx eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "stylelint": "npx stylelint './{src}/**/*.less' './{src}/**/*.css'",
        "stylelint:fix": "npx stylelint './{src}/**/*.less' './{src}/**/*.css' --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "deploy": "zx scripts/deploy.mjs",
        "deploy:test": "npm run deploy test",
        "static": "bash scripts/static.command",
        "static:test": "bash scripts/static-test.command",
        "pm2": "pm2 restart ./pm2/config.json --env production",
        "pm2:test": "pm2 restart ./pm2/config-test.json --env staging"
    },
    "dependencies": {
        "@nestjs-modules/mailer": "^1.10.3",
        "@nestjs/axios": "^2.0.0",
        "@nestjs/common": "^9.0.0",
        "@nestjs/config": "^2.2.0",
        "@nestjs/core": "^9.0.0",
        "@nestjs/platform-express": "^9.0.0",
        "@nestjs/schedule": "^2.2.1",
        "@nestjs/serve-static": "^3.0.1",
        "@nestjs/swagger": "^6.1.4",
        "@nestjs/typeorm": "^9.0.1",
        "axios": "^1.3.4",
        "canvas": "^2.11.2",
        "chrome-launcher": "^0.15.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "compression": "^1.7.4",
        "cron-parser": "^4.8.1",
        "dingtalk-robot-sender": "^1.2.0",
        "dotenv": "^16.3.1",
        "jsdom": "^22.1.0",
        "lighthouse": "^9.6.8",
        "mysql": "^2.18.1",
        "mysql2": "^3.2.0",
        "nodemailer": "^6.4.6",
        "puppeteer": "^19.5.1",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.0",
        "typeorm": "^0.3.12"
    },
    "devDependencies": {
        "@nestjs/cli": "^9.0.0",
        "@nestjs/schematics": "^9.0.0",
        "@nestjs/testing": "^9.0.0",
        "@types/cron": "^2.0.1",
        "@types/dingtalk-robot-sender": "^1.1.1",
        "@types/express": "^4.17.13",
        "@types/jest": "29.2.4",
        "@types/node": "18.11.18",
        "@types/supertest": "^2.0.11",
        "eslint": "8.22.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-prettier": "4.2.1",
        "jest": "29.3.1",
        "ko-lint-config": "2.2.21",
        "postcss": "^8.4.19",
        "postcss-scss": "^4.0.6",
        "prettier": "2.7.1",
        "source-map-support": "^0.5.20",
        "stylelint": "14.11.0",
        "stylelint-config-standard": "25.0.0",
        "stylelint-order": "5.0.0",
        "supertest": "^6.1.3",
        "ts-jest": "29.0.3",
        "ts-node": "^10.0.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "packageManager": "pnpm@6.32.17",
    "engines": {
        "node": ">=14"
    }
}
